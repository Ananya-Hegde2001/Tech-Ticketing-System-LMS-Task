{
  "name": "ticketing-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "db:reset": "node src/scripts/dbReset.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "moduleFileExtensions": ["js"],
  "collectCoverageFrom": ["src/**/*.js", "!src/scripts/**"],
  "setupFiles": ["<rootDir>/src/tests/setupEnv.js"],
  "globalSetup": "<rootDir>/src/tests/globalSetup.js"
  }
}
